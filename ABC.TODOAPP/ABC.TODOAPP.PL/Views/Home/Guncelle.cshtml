@model WorkDTO

<div class="container my-2">

    <form asp-action="update" asp-controller="Home" method="post">
        <div>
            <label asp-for="Definition"></label>
            <input asp-for="Definition" value="@Model.Definition" />
            <div asp-validation-summary="ModelOnly"></div>
        </div>
        <div>
            <label asp-for="IsComplated"></label>
            <input asp-for="IsComplated" type="checkbox" value="@Model.IsComplated" />
            <div asp-validation-summary="ModelOnly"></div>
        </div>
        <div class="my-2">
            <button class="btn btn-dark">Button</button>
        </div>
    </form>
</div>
